class Solution:
    def mergeTwoLists(self, a: Optional[ListNode], b: Optional[ListNode]) -> Optional[ListNode]:

        dummy = ListNode()
        tail = dummy 

        while a and b:
            if a.val < b.val:
                tail.next = a
                a = a.next 
            else:
                tail.next= b 
                b = b.next 
            tail  = tail.next 
        
        tail.next = a or b 
        return dummy.next
        
